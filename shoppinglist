<body>
    <div class="container">
        <h1>游 Lista de la Compra</h1>

        <div class="add-item">
            <input type="text" id="newItem" placeholder="A침adir nuevo producto..." maxlength="50">
            <button id="addBtn">A침adir</button>
        </div>

        <ul class="shopping-list" id="shoppingList">
            <!-- Los elementos se a침adir치n aqu칤 din치micamente -->
        </ul>
    </div>

    <script>
        const newItemInput = document.getElementById('newItem');
        const addBtn = document.getElementById('addBtn');
        const shoppingList = document.getElementById('shoppingList');

        // Funci칩n para a침adir un nuevo elemento
        function addItem() {
            const itemText = newItemInput.value.trim();
            if (itemText === '') return;

            const listItem = document.createElement('li');
            listItem.className = 'list-item';

            listItem.innerHTML = `
                <input type="checkbox" onchange="toggleComplete(this)">
                <span class="item-text">${itemText}</span>
                <button class="delete-btn" onclick="deleteItem(this)">Eliminar</button>
            `;

            shoppingList.appendChild(listItem);
            newItemInput.value = '';
            newItemInput.focus();
        }

        // Funci칩n para marcar/desmarcar como completado
        function toggleComplete(checkbox) {
            const listItem = checkbox.parentElement;
            if (checkbox.checked) {
                listItem.classList.add('completed');
            } else {
                listItem.classList.remove('completed');
            }
        }

        // Funci칩n para eliminar un elemento
        function deleteItem(button) {
            const listItem = button.parentElement;
            listItem.remove();
        }

        // Event listeners
        addBtn.addEventListener('click', addItem);

        newItemInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                addItem();
            }
        });

        // A침adir algunos elementos de ejemplo
        newItemInput.value = 'Pan';
        addItem();
        newItemInput.value = 'Leche';
        addItem();
        newItemInput.value = 'Huevos';
        addItem();
    </script>
</body>
